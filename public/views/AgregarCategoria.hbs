<body>
    <div class="barraPrincipal">
        {{> Encabezado}}
    </div>

    <div class="contenedor">
        {{> Menu}}
        <div class="contenido">

            <center>
                <h3>Agregar Categoría de Insumos</h3>
              </center>
              <br>
              <div class="contForms">
                <div class="contIzquierda">
                  <div class="input1">
                    <p class="parrafoGris"><i class="fa-solid fa-key iconosRojos"></i> ID categoría de insumos</p>
                    <input class="input-field" type="text" placeholder="200" readonly>
                  </div>
                  <br>
                </div>
              </div>
              <br>
              
              <div class="contFormsAbajo">
                <div class="contIzquierdaAbajo">
                  <div class="input1">
                    <p><i class="fa-solid fa-font iconosRojos"></i> Nombre de categoría</p>
                    <input class="input-field2" type="text" placeholder="ej:Categoría B">
                  </div>
                </div>
              </div>
              <div class="btninsumos">
                <button class="boton botonAgregar" onclick="window.location.href='CategoriaInsumos'">Agregar</button>
                <button class="boton boton-generar" onclick="window.location.href='CategoriaInsumos'">Cancelar</button>
              </div>
          </div>
            
        </div>
      </div>

      <script>
        $(document).ready(function () {
            var table = $('table.display').DataTable({
                lengthMenu: [5], // Establece el número de registros a mostrar en el dropdown
                pageLength: 5, // Muestra solo 5 registros por página
                paging: true, // Activa la paginación
                searching: true, // Activa la búsqueda
                ordering: true, // Activa la ordenación
                info: true, // Muestra la información de paginación
            });

            $('.dataTables_length').hide();
            $('.dataTables_info').hide();
            $('.dataTables_filter').addClass('pull-left');

        });

    </script>
