<body>
    <div class="barraPrincipal">
        {{> Encabezado}}
    </div>

    <div class="contenedor">
        {{> Menu}}
        <div class="contenido">
            <center>
                <div id="titulo">
                    <h1>Gestión Categoria de insumos</h1>
                </div>
            </center>
            <div class="botones">
                <button class="boton botonAgregar" onclick="window.location.href='AgregarCategoria';"><i
                        class="fas fa-plus"></i> Agregar categoría</button>
            </div>
            <div class="tabla">
                <table id="tablaInsumos" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th><i class="fa-solid fa-key iconosRojos"></i> ID</th>
                            <th><i class="fa-solid fa-font iconosRojos"></i> Nombre</th>
                            <th><i class="fa-solid fa-gear iconosRojos"></i>Funciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Categoría A</td>
                            <td>
                                <i class="fa-solid fa-pen-to-square iconosRojos"
                                    onclick="window.location.href='ActualizarCategoriaInsumos'"></i>
                                <i class="fas fa-toggle-on toggle-icon"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Categoría B</td>
                            <td>
                                <i class="fa-solid fa-pen-to-square iconosRojos"
