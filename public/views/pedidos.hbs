<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    
    <link rel="stylesheet" href="css/dataTable.css" />
    <link rel="stylesheet" href="css/gestionpedidos.css">
    <!-- Incluye la biblioteca de Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluye la biblioteca de Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>LuchoSoft</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="barraPrincipal">
        {{> Encabezado}}
    </div>

    <div class="contenedor">
        {{> Menu}}
        <div class="contenido">
            <center>
                <div id="titulo">
                    <h1>Gestión de pedidos</h1>
                </div>
            </center>
            <div class="botones">
                <button class="boton botonAgregar" onclick="window.location.href='registroPedidos'"><i class="fa-solid fa-plus"></i> Agregar cliente</button>
                <button class="boton boton-generar"><i class="fa-solid fa-file-pdf"></i> Generar reportes</button>
            </div>
            <div class="tabla">
                <table id="tablaDataTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th><i class="fa-solid fa-key iconosRojos"></i> ID</th>
                            <th><i class="fa-solid fa-message iconosRojos"></i> Descripción</th>
                            <th><i class="fa-sharp fa-solid fa-dollar-sign iconosRojos"></i> Precio del pedido</th>
                            <th><i class="fa-solid fa-calendar-week iconosRojos"></i> Fecha del pedido</th>
                            <th><i class="fa-solid fa-beer iconosRojos"></i> Productos</th>
                            <th><i class="fa-solid fa-user iconosRojos"></i> Cliente</th>
                            <th><i class="fa-solid fa-gear iconosRojos"></i> Funciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>7000</td>
                            <td>Pedido pack de carnes</td>
                            <td>200000</td>
                            <td>05/07/23</td>
                            <td>Carne de pollos, Carne de cerdo, Salchicha.</td>
                            <td>Donde El Cucho </td>
                            <td>
                                <i onclick="window.location.href='ActualizarPedidos'" class="fa-solid fa-pen-to-square iconosRojos"></i>
                                <i class="bi bi-toggle2-on iconos toggle-icon" data-state="on"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>7001</td>
                            <td>Pedido pack de gaseosas</td>
                            <td>150000</td>
                            <td>10/07/23</td>
                            <td>Coca Cola, Pepsi, Postobón </td>
                            <td>Ratistunt </td>
                            <td>
                                <i onclick="window.location.href='ActualizarPedidos'" class="fa-solid fa-pen-to-square iconosRojos"></i>
                                <i class="bi bi-toggle2-on iconos toggle-icon" data-state="on"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>7002</td>
                            <td>Pedido pack Arroz</td>
                            <td>420000</td>
                            <td>18/07/23</td>
                            <td>Arroz orgánico</td>
                            <td>Cachuchax </td>
                            <td>
                                <i onclick="window.location.href='ActualizarPedidos'" class="fa-solid fa-pen-to-square iconosRojos"></i>
                                <i class="bi bi-toggle2-on iconos toggle-icon" data-state="on"></i>
                            </td>
                        </tr>
                        <!-- Agregar más filas según sea necesario -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            var table = $('table.display').DataTable({
                lengthMenu: [5], // Establece el número de registros a mostrar en el dropdown
                pageLength: 5, // Muestra solo 5 registros por página
                paging: true, // Activa la paginación
                searching: true, // Activa la búsqueda
                ordering: true, // Activa la ordenación
                info: true, // Muestra la información de paginación
            });

            $('.dataTables_length').hide();
            $('.dataTables_info').hide();
            $('.dataTables_filter').addClass('pull-left');

        });
        

    </script>

    <script src="js/gestionDePedidos.js"></script>
    <script type="text/javascript" src="js/dataTable.js"></script>

</html>

</body>

</html>